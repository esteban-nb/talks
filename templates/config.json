{
  "hash": true,
  "controls": true,
  "progress": true,
  "center": true,
  "help": true,
  "transition": "slide",
  "transitionSpeed": "default",
  "backgroundTransition": "fade",
  "slideNumber": "c/t",
  "pdfMaxPagesPerSlide": 1,
  "width": "100%",
  "height": "100%",
  "margin": 0.04,
  "markdown": {
    "smartypants": true
  },
  "highlight": {
    "lineNumbers": true,
    "escapeHTML": true
  },
  "plugins": [
    "RevealMarkdown",
    "RevealHighlight",
    "RevealNotes",
    "RevealMath.MathJax3",
    "RevealZoom"
  ]
}
